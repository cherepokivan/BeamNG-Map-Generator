{
  "$schema": "https://schema.tauri.app/config/2",
  "package": {
    "productName": "BeamNG Map Generator",
    "version": "1.0.0"
  },
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../dist",
    "distDir": "../dist"
  },
  "tauri": {
    "bundle": {
      "identifier": "com.beamng.mapgen",
      "icon": ["icons/icon.ico"],
      "targets": ["nsis"],

      "nsis": {
        "displayLanguageSelector": false,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "installerIcon": "icons/icon.ico",
        "shortcutName": "BeamNG Map Generator",
        "uninstallerIcon": "icons/icon.ico"
      }
    },
    "windows": [
      {
        "title": "BeamNG Map Generator",
        "width": 1000,
        "height": 700,
        "resizable": true
      }
    ]
  }
}
